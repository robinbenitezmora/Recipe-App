<div class="foods-btn">
  <h2>Food List</h2>
  <%= link_to 'Add Food', new_food_path %>
</div>
<% if @foods.empty? %>
  <p class="no-food">No foods added yet. Please use the button above ☝️ to add a new food</p>
<% else %>
<table class="table table-hover table-striped table-bordered">
  <thead class="bg-color">
    <tr>
      <th scope="col">Food</th>
      <th scope="col">Measurement Unit</th>
      <th scope="col">Unit Price</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    
      <% @foods.each do |food| %>
        <%= render 'shared/table', food: food %>
      <% end %>
  </tbody>
</table>
<% end %>