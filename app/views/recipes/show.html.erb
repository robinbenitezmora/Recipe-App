<section>
    <h1><%= @recipe.name %></h1>
    <div class="showContainer">
    <div>
        <p><%= @recipe.preparation_time %></p>
        <p><%= @recipe.cooking_time %></p>
        <%= link_to "Generate shopping list", user_recipes_path %>
    </div>

    <div>
        <p>Public: <%= @recipe.public %></p>
        <% if can? :manage, @recipe %>
        <%= link_to 'Add ingredient', "/recipe_foods/#{@recipe.id}/new", class: 'btn btn-primary'%>
        <% end %>
    </div>
</div>

<div>
    <table class="table table-striped table-bordered w-100 mt-4">
    <thead>
      <tr>
        <th scope="col">Food</th>
        <th scope="col">Quantity</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @foods.each do |f| %>
        <tr>
          <td><%= f.name %></td>
          <td><%= f.quantity %></td>
          <td><%= button_to 'Delete', "/recipe_foods/#{@recipe.id}/destroy/#{f.id}", method: :delete, class: "btn btn-outline-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to "All recipes", user_recipes_path, class: "btn btn-primary" %>

</section>
