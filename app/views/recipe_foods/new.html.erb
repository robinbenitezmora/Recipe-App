<div class="container-fluid w-50 d-flex flex-column align-items-center">
    <h1 class="mb-5">Add food</h1>
    <%= form_with model: @recipe_food, url: "/recipe_foods/#{@recipe.id}/create", method: :post do |form| %>
  
      <p>Choose food from this list (press ctrl+click to select multiple)</p>
      
      <%= form.select :food_list, Food.order(:name).pluck(:name, :id), {}, {:multiple => true, required:true, class: "form-select mb-3"} %>
      <%= form.label :quantity, 'Quantity:', class: "form-label" %>
      <%= form.number_field :quantity, class: "form-control form-control-lg mb-4" %>
      <%= form.submit 'Add food', class: "btn btn-primary" %>
    <% end %>
</div>
